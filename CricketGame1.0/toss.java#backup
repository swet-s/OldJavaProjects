import java.util.*;
/*printing cricket card /*/
class toss 
{
static int inn=0;
public static void toss(String t1,String t2)
{
Random r=new Random();
float X=r.nextFloat();float toss=Math.round(0+9*X);
if (toss==0||toss==3||toss==6)
{System.out.println("\n\n "+t1+" won the toss ,and choose to ball first");inn=2;}
else if(toss==8||toss==9)
{System.out.println("\n\n "+t1+" won the toss ,and choose to bat first");inn=1;}
else if(toss==5||toss==2||toss==7)
{System.out.println("\n\n "+t2+" won the toss ,and choose to ball fisrt");inn=1;}
else if(toss==1||toss==4)
{System.out.println("\n\n "+t2+" won the toss ,and choose to bat first");inn=2;}
}
public static int inn()
{
return inn ;
}
public static String toss()
{
return toss ;
}
}
